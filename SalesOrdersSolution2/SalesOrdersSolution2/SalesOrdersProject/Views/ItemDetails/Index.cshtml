@model SalesOrdersProject.Models.Product

@{
    ViewBag.Title = "Bike Store Item Detail Page";
}

<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=" device-width" />
    <title>Bike Shop Item Details</title>
</head>
<body style="background-color:lightgray; font-size:16px">
    <br /><br />
    <h2>Item Detail Page</h2>

    <div style="display: inline-block">
        <div style="width: 30%; float: left;">
            <img src="@Url.Content(Model.ProductImage)"
                 width="200"
                 height="150"
                 alt="@Model.ProductName"
                 title="@Model.ProductName" />
        </div>

        <div style="width: 70%; float: left;">
            <h1>@Html.DisplayFor(modelItem => Model.ProductName)</h1>

            <p>
                @*@Html.DisplayFor(modelItem => Model.ProductDescLong)*@
                @Html.Raw(@Model.ProductDescLong)
            </p>

            <p>
                $@Html.DisplayFor(modelItem => Model.ProductPrice)
            </p>

            <p>
                @Html.ActionLink("More Info", "Index", "Info",
                         new { id = Model.ProductID },
                         new { id = "ProductID" })
            </p>
            <p>
                @Html.ActionLink("Continue Shopping", "Index", "Shop")
            </p>

            @using (Html.BeginForm("AddToCart", "ShoppingCart"))
            {
                <div>
                    @Html.HiddenFor(x => x.ProductID)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <input type="submit" class="btn btn-success"
                           value="Add to Cart" />
                </div>
            }
        </div>
    </div>
</body>
</html>

